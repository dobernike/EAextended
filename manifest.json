{
  "manifest_version": 2,
  "name": "EAextend",
  "version": "2.0",
  "description": "Автоматизация накладной",
  "icons": {
    "48": "img/icon.png"
  },

  "browser_action": {
    "default_title": "Автоматизация накладной",
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "https://euroauto.ru/*",
    "http://euroauto.ru/*",
    "http://localhost/*"
  ],

  "content_scripts": [{
      "matches": ["http://euroauto.ru/raschet_stoimosti_rabot/*",
        "https://euroauto.ru/raschet_stoimosti_rabot/*"
      ],
      "js": ["workPrice.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://amtel.club/cabinet/history/lc*"],
      "js": ["historyOpt.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://amtel.club/search/*"],
      "js": ["search.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://amtel.club/cart/*"],
      "js": ["basket.js"],
      "run_at": "document_end"
    }


  ]
}
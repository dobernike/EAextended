{
  "manifest_version": 2,
  "name": "EAextend",
  "version": "3.1",
  "description": "Автоматизация продаж EA",
  "icons": {
    "48": "img/icon.png"
  },

  "browser_action": {
    "default_title": "Автоматизация продаж EA",
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "https://euroauto.ru/*",
    "http://euroauto.ru/*",
    "http://localhost/*",
    "https://amtel.club/*",
    "http://amtel.club/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://euroauto.ru/raschet_stoimosti_rabot/*",
        "https://euroauto.ru/raschet_stoimosti_rabot/*"
      ],
      "js": ["workPrice.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://amtel.club/cabinet/history/lc*"],
      "js": ["historyOpt.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://amtel.club/search/*"],
      "js": ["search.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://amtel.club/cart/*"],
      "js": ["basket.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://amtel.club/cabinet/invoice/print/*"],
      "js": [
        "lib/jquery-3.3.1.min.js",
        "lib/JsBarcode.code128.min.js",
        "invoiceOpt.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://amtel.club/cabinet/history/ldc/print/*"],
      "js": [
        "lib/jquery-3.3.1.min.js",
        "lib/JsBarcode.code128.min.js",
        "invoiceEa.js"
      ],
      "run_at": "document_end"
    }
  ]
}
